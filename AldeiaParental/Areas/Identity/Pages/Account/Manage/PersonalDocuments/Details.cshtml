@page
@model AldeiaParental.Areas_Identity_Pages_Account_Manage_PersonalDocuments.DetailsModel

@{
    ViewData["Title"] = "Detalhar Documento";
}

<h1>Detalhar</h1>

<div>
    <h4>Documentos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonalDocument.DocumentType)
        </dd>
        <dt class="col-sm-2">
            Número
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonalDocument.DocumentNumber)
        </dd>
        <dt class="col-sm-2">
            Arquivo
        </dt>
        <dd class="col-sm-10">
            <a asp-page-handler="DownloadFile" asp-route-fileName=@Model.PersonalDocument.FilePath>@Model.PersonalDocument.FilePath</a>
        </dd>
        <dt class="col-sm-2">
            Verificação
        </dt>
        <dd class="col-sm-10">
             @(Model.PersonalDocument.Valid==null?"Indefinido":Model.PersonalDocument.Valid==true?"Válido":"Inválido")
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonalDocument.User.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.PersonalDocument.Id">Editar</a> |
    <a asp-page="./Index">Listar Documentos</a>
</div>
