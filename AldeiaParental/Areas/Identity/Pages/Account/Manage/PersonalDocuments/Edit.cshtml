@page
@model AldeiaParental.Areas_Identity_Pages_Account_Manage_PersonalDocuments.EditModel

@{
    ViewData["Title"] = "Editar Documento";
    bool readOnly = Model.PersonalDocument.Valid??false;
}

<h1>Editar</h1>

<h4>Documento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonalDocument.Id" />
            <input type="hidden" asp-for="PersonalDocument.Valid" class="form-control" />
            <div class="form-group">
                <label asp-for="PersonalDocument.DocumentType" class="control-label">Tipo</label>
                <input asp-for="PersonalDocument.DocumentType" class="form-control" readonly=@readOnly/>
                <span asp-validation-for="PersonalDocument.DocumentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalDocument.DocumentNumber" class="control-label">Número</label>
                <input asp-for="PersonalDocument.DocumentNumber" class="form-control" readOnly=@readOnly/>
                <span asp-validation-for="PersonalDocument.DocumentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Arquivo (.pdf) max 1 Mb</label>
                <input type="file" asp-for="Upload" class="form-control-file"/>
                <span asp-validation-for="PersonalDocument.FilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalDocument.Valid" class="control-label">Verificação:</label>
                @(Model.PersonalDocument.Valid==null?"Indefinido":Model.PersonalDocument.Valid==true?"Válido":"Inválido")
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" disabled=@readOnly/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Listar Documentos</a>
</div>

