@page
@model AldeiaParental.Pages.FindCaregivers.DetailsModel
@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do Cuidador</h1>

<div>
    <h4>Cuidador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caregiver.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caregiver.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caregiver.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caregiver.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caregiver.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caregiver.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caregiver.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caregiver.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caregiver.EmailConfirmed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caregiver.EmailConfirmed)
        </dd>
    </dl>
</div>

<div>
    <h4>Locais de Atendimento do Cuidador</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceLocations[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceLocations[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceLocations[0].Region)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ServiceLocations.Where(s=>!s.AtCustomerHome))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Region.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <h3>Atendimento à domicílio</h3>
        <h4>
            O Cuidador pode atender no conforto de sua casa, nas seguintes regiões:
        </h4>

            @foreach (var item in Model.ServiceLocations.Where(s=>s.AtCustomerHome).Distinct() )
            {<p>@item.Region.Name</p>
            }
        
</div>
</div>
<div>
    <a asp-page="./Index">Listar cuidadores</a>
</div>
