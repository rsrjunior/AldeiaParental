@page
@model AldeiaParental.Pages_Users.IndexModel

@{
    ViewData["Title"] = "Usuários";
}

<h1>Usuários</h1>

<p>
    <a asp-page-handler="Csv">Download CSV</a> | <a asp-page="./Stats">Indicadores</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th>@Html.DisplayNameFor(model => model.Users[0].Perfis)</th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].LockoutEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perfis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>       
            <td>
                @Html.DisplayFor(modelItem => item.LockoutEnd)
            </td>
            <td>
                <a asp-page="./Manage" asp-route-id="@item.Id">Gerenciar</a>
            </td>
        </tr>
}
    </tbody>
</table>
