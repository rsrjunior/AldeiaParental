@page
@model AldeiaParental.Pages_Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page-handler="Csv">Download CSV</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Sobrenome
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AldeiaParentalUser[0].Email)
            </th>
            <th>Perfil</th>
            <th>
                @Html.DisplayNameFor(model => model.AldeiaParentalUser[0].RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AldeiaParentalUser[0].LockoutEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AldeiaParentalUser) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                Perfil
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>       
            <td>
                @Html.DisplayFor(modelItem => item.LockoutEnd)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Gerenciar</a>
            </td>
        </tr>
}
    </tbody>
</table>
