@page
@model AldeiaParental.Pages.Regions.DeleteModel

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Tem certeza?</h3>
<div>
    <h4>Região</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Region.Name)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Region.Description)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Region.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-page="./Index">Listar Regiões</a>
    </form>
</div>
