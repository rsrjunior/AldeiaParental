@page
@model AldeiaParental.Pages.ServiceLocations.DetailsModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Local de Atendimento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceLocation.Description)
        </dd>
        <dt class="col-sm-2">
            Endereço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceLocation.Address)
            @(Model.ServiceLocation.AtCustomerHome?"(à domícilo)":null)
        </dd>
        <dt class="col-sm-2">
            Região
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceLocation.Region.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ServiceLocation.Id">Editar</a> |
    <a asp-page="./Index">Listar Locais</a>
</div>
