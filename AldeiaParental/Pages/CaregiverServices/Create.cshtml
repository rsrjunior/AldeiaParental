@page
@model AldeiaParental.Pages_CaregiverServices.CreateModel

@{
    ViewData["Title"] = "Novo Atendimento";
}

<h1>Novo</h1>

<h4>Atendimento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Service.Customer" class="control-label"></label>
                <select asp-for="Service.CustomerId" class ="form-control" asp-items="ViewBag.Customer"></select>
            </div>
            <div class="form-group">
                <label asp-for="Service.CaregiverComments" class="control-label"></label>
                <input asp-for="Service.CaregiverComments" class="form-control" />
                <span asp-validation-for="Service.CaregiverComments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.datetime" class="control-label"></label>
                <input asp-for="Service.datetime" class="form-control" />
                <span asp-validation-for="Service.datetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Listar Atendimentos</a>
</div>

