@using Microsoft.AspNetCore.Identity
@inject SignInManager<AldeiaParentalUser> SignInManager
@inject UserManager<AldeiaParentalUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Cliente"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/FindCaregivers/Index" title="FindCaregivers">Find Caregivers</a>
            </li>
        }
        @if (User.IsInRole("Administrador"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Regions/Index" title="Regions">Regions</a>
            </li>
        }
        @if (User.IsInRole("Cuidador"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/ServiceLocations/Index" title="ServiceLocations">Service Locations</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Profile" title="Manage">My Account</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
